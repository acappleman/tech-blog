<div class="text-center" id="blog-post" data-id="{{id}}">
  <h2>{{{get_emoji}}} {{name}}</h2>
  <p>{{description}}</p>
  <p>Created by {{user.name}} on {{format_date date_created}}</p>
</div>

<div class="col-md-6">
  <h3>Comments</h3>
  {{#each comments as |comment| }}
  <div class="row mb-4 comment-box">
    <div class="col-md-12 comment-header">
      Created by {{comment.user.name}} on {{format_date comment.date_created}}
    </div>
    <div class="col-md-12 comment-body">
      <p>
        {{comment.description}}
      </p>
    </div>
  </div>
  {{/each}}
</div>

<div class="col-md-6">
  <h3>Add a comment:</h3>

  <form class="form new-comment-form">
    <div class="form-group">
      <textarea class="form-input" id="comment-desc" name="comment-desc"></textarea>
    </div>
    <div class="form-group">
      <button type="submit" class="btn btn-primary">Create</button>
    </div>
  </form>
</div>

<script src="../js/blog.js"></script>