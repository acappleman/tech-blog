<div class="text-center" id="blog-post" data-id="{{id}}">
  <h2>{{{get_emoji}}} {{name}}</h2>
  <p>{{description}}</p>
  <p>Created by {{user.username}} on {{format_date date_created}}</p>
</div>
<div class="col-md-6">
  <h3>Comments</h3>
  {{#each comments as |comment| }}
  <div class="row mb-4 comment-box">
    <div class="col-md-12 comment-header">
      Created by {{comment.user.username}} on {{format_date comment.date_created}}
      {{#if (is_current_user ../current_user comment.user.id)}}
        <button class="btn btn-sm btn-danger comment-button" data-id="{{comment.id}}">DELETE</button>
        <button class="btn btn-sm comment-button" data-id="{{comment.id}}">EDIT</button>
      {{/if}}
    </div>
    <div class="col-md-12 comment-body">
      <p>
        {{comment.description}}
      </p>
    </div>
  </div>
  {{/each}}
</div>

{{#if logged_in}}
<div class="col-md-6">
  <h3>Add a comment:</h3>

  <form class="form new-comment-form">
    <div class="form-group">
      <textarea class="form-input" id="comment-desc" name="comment-desc"></textarea>
    </div>
    <div class="form-group">
      <button type="submit" class="btn btn-primary">Create</button>
    </div>
  </form>
</div>
{{/if}}

<script src="../js/blog.js"></script>